<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/header.ejs') %>
        <form action="/film/edit/<%= id %>" method="post" enctype="multipart/form-data">
            <div class="main flex flex-column">        
                <table class="table table-input">
                    <tr>
                        <td>
                            <label for="title">Title</label>
                        </td>
                        <td>
                            <input type="text" name="title" minlength="1" maxlength="128">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="poster">Poster</label>
                        </td>
                        <td>
                            <input type="file" name="poster" accept="image/png,image/jpeg">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="description">Description</label>
                        </td>
                        <td>
                            <textarea name="description" minlength="1" maxlength="1024"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="releaseDate">Release Date</label>
                        </td>
                        <td>
                            <input type="date" name="releaseDate" min="<%= deafultValues.minDate %>" max="<%= deafultValues.maxDate %>">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="director">Director</label>
                        </td>
                        <td>
                            <input type="text" name="director" minlength="1" maxlength="128">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="runtime">Runtime</label>
                        </td>
                        <td>
                            <input type="number" name="runtime" min="1" step="1">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="genre">Genre</label>
                        </td>
                        <td>
                            <select name="genre">
                                <option value="" selected></option>
                                <% for (let genre of deafultValues.genres) { %>
                                    <option value="<%= genre %>"><%= genre.at(0).toUpperCase() + genre.slice(1) %></option>
                                <% } %>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="watched">Watched</label>
                        </td>
                        <td>
                            <input type="checkbox" name="watched">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="rating">Rating</label>
                        </td>
                        <td>
                            <input type="range" name="rating" min="0" max="5" step="1">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="review">Review</label>
                        </td>
                        <td>
                            <textarea name="review" minlength="0" maxlength="1024"></textarea>
                        </td>
                    </tr>
                </table>
                <input class="submit" type="submit" value="Save">
            </div>
        </form>
    </body>
</html>